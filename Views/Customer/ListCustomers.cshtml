@model IEnumerable<Agenda.Models.Customer>

@{
    ViewBag.Title = "ListCustomers";
}
<div class="d-flex flex-column mt-2">
    <table class="table mt-2">
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Adresse Mail</th>
            <th>Numéro de Téléphone</th>
            <th>Budget</th>
            <th>Sujet</th>
            <th>Détails</th>
            <th>Suppression</th>
        </tr>
        @foreach (var client in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => client.LastName)</td>
                <td>@Html.DisplayFor(modelItem => client.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => client.Mail)</td>
                <td>@Html.DisplayFor(modelItem => client.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => client.Budget)</td>
                <td>@Html.DisplayFor(modelItem => client.Subject)</td>
                <td>@Html.ActionLink("Détails", "profilCustomer", new { id = client.idCustomer })</td>
                <td>@Html.ActionLink("Suppression", "Suppr", new { id = client.idCustomer })</td>
            </tr>
        }
    </table>
    <input class="border border-primary m-auto" id="client" name="client" type="text" placeholder="Chercher Client" onfocus="clearSearch()" />
    <input class="mt-2 m-auto btn btn-primary border border-light" type="submit" value="Rechercher" onclick="searchCust()" />
    @*Pagination*@
    <ul class="pagination mt-2 mb-2 m-auto">
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
    </ul>
</div>
<script src="~/assets/js/Search.js"></script>

