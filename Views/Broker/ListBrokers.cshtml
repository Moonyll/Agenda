@model IEnumerable<Agenda.Models.Broker>

@{
    ViewBag.Title = "ListBrokers";
}
<table class="table">
    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Adresse Mail</th>
        <th>Numéro de Téléphone</th>
        <th>Détails</th>
        <th>Rendez-Vous</th>
     </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Détails", "profilBroker", new { id = item.idBroker })
        </td>
        <td>
            @Html.ActionLink("Ajouter", "addAppointement", new { id = item.idBroker })@*mettre à jour*@
        </td>
    </tr>
    }
</table>


