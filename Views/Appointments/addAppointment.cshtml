
@model Agenda.Models.Appointment

@{
    ViewBag.Title = "addAppointment";
    }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idBroker, "Courtier", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("idBroker", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idBroker, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.idCustomer, "Client", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("idCustomer", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCustomer, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateHour, "Date", htmlAttributes: new { @class = "control-label datepicker", @type = "datetime" })
            @Html.EditorFor(model => model.DateHour, new { htmlAttributes = new { @class = "form-control datepicker", @type = "datetime" } })
            @Html.ValidationMessageFor(model => model.DateHour, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col mt-2">
                <input type="submit" value="Ajouter" class="btn btn-light bg-info text-light" />
            </div>
            <div class="col mt-2">
                <a type="button" value="Retour" class="btn btn-light bg-primary text-light" href="AppointmentList">Retour</a>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/jquery.datetimepicker.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
